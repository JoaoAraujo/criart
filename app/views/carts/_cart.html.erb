<% if notice %>
<p id="notice"><%=notice%></p>
<% end %>

<div class="cart_title">Carrinho</div>
<table>    
    <%= render(cart.line_items) %>
	<tr class="total_line">
		<td colspan="2">Total</td>
		<td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
	</tr>
</table>

<%= link_to 'Finalizar Compra', new_order_path, :method => :get %>
<%= link_to 'Limpar Carrinho', cart, :method => :delete, :confirm => 'Tem a certeza?'%>

