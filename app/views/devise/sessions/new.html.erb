<h1>Entrar</h1>
<div class="row mtop60">
<div class="span8 rborder">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  
  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <% if devise_mapping.rememberable? -%>
    <%= f.label "Lembrar-me" %> <%= f.check_box :remember_me %>
  <% end -%>
  <%= f.submit "Entrar", :class => "btn small fix fleft" %>

	<br/>
	
	<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
	<div class="passwordF">
		<%= link_to "Esqueceu a Password?", new_password_path(resource_name)%><br />
	</div>
	<% end -%>
	
	<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
	  <div class="newAccount">Não têm conta? <%= link_to "Registe-se!", new_registration_path(resource_name) %></div><br />
	<% end -%>
<% end %>

</div>
<div class="span7 social">
<%= render :partial => "devise/shared/links" %>
</div>
</div>