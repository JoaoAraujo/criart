<div class="container">
    <div class="row mtop60 mbottom60">
		<div class="span7">
			<%= image_tag(@product.photo.url(:large), :class => "thumbnail") %>
		</div>	
		<div class="span9 mtop30">
			<p>
			  <b><%= @product.name %></b>
			</p>
			<p>
			  <b>
				<strong>
			  		<%= number_to_currency(@product.price, :unit => "&euro;" )%></b>
					<%= button_to 'Adicionar', line_items_path(:product_id => @product), :class => "btn success", :remote => true %>
				</strong>
			</p>
			<p>
				<b>Descrição</b><br/>
				  <%= @product.description%>
			</p>
		</div>
	</div>
</div>


